<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pawel.fridgerator.AddNewActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutId"
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/nameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/priceId"
            android:layout_alignStart="@+id/priceId"
            android:layout_below="@+id/toolbarNew"
            android:text="name"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="150dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarNew"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/darker_gray"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            tools:layout_editor_absoluteX="-4dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/amountId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="107dp"
            android:text="amount"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="100dp"
            android:layout_below="@+id/storeId"
            android:layout_alignLeft="@+id/storeId"
            android:layout_alignStart="@+id/storeId" />

        <TextView
            android:id="@+id/priceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="150dp"
            android:layout_marginTop="93dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/toolbarNew"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/storeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="store"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="200dp"
            android:layout_below="@+id/priceTextId"
            android:layout_alignLeft="@+id/priceTextId"
            android:layout_alignStart="@+id/priceTextId" />

        <EditText
            android:id="@+id/amountTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/amountId"
            android:layout_alignStart="@+id/amountId"
            android:layout_below="@+id/amountId"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="10" />

        <EditText
            android:id="@+id/storeTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/storeId"
            android:layout_alignStart="@+id/storeId"
            android:layout_below="@+id/storeId"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Gulden" />

        <EditText
            android:id="@+id/priceTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/priceId"
            android:layout_alignStart="@+id/priceId"
            android:layout_below="@+id/priceId"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="6.66" />

        <EditText
            android:id="@+id/nameTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/nameId"
            android:layout_alignLeft="@+id/nameId"
            android:layout_alignStart="@+id/nameId" />

        <Button
            android:id="@+id/buttonCreateId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/nameTextId" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
